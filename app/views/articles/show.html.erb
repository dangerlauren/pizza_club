<div class="row">
	<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-s-10 col-s-offset-1 col-xs-10 col-xs-offset-1 rev">
		<h3>This review has been posted.</h3>
		<p>
			<%= @article.author %>
		</p>

		<p>
		<%= @article.date.to_s(:long) %>
		</p>

		<p>
			<strong><%= @article.headline %></strong>
		</p>

		<p>
			<%= @article.text %>
		</p>

		<p>
			<%= @article.image_link %>
		</p>		
		<%= link_to 'Post another review', new_article_path %><br>
		<%= link_to "Edit review", edit_article_path %><br>
    <%= link_to "Delete", article_path, method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %>
	</div>
</div>