<p class="navbar-text pull-right">
	<% if user_signed_in? %>
		<%= link_to 'EDIT ARTICLES', admins_path, :class => 'navbar-link' %> |
	  <%= link_to 'EDIT PROFILE', edit_user_registration_path, :class => 'navbar-link' %> |
	  <%= link_to "LOGOUT", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
</p>

<h2 class="rev_form_head">This review has been posted.</h2>

<div class="article_text">
	<div class="row-fluid">
		<div class="span6">
			<%= @article.author %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= @article.date.to_s(:long) %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<strong><%= @article.headline %></strong>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= @article.text %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= @article.image_link %>
		</div>
	</div>	

	<div class="row-fluid">
		<div class="span6">
			<%= button_to 'Post another review', new_article_path, :method => :get %>
		</div>
	</div>	

	<div class="row-fluid">
		<div class="span6">
			<%= button_to "Edit review", edit_article_path, :method => :get %>
		</div>
	</div>	

	<div class="row-fluid">
		<div class="span6">
		  <%= button_to "Delete", article_path(@article), :method => :delete, data: { confirm: "Are you sure you want to delete this review?" } %>
		</div>
	</div>
</div>	

<% else %>

	<div class="row-fluid">
		<div class="rev_image">
			<img class="img-responsive" src="<%= @article.image_link %>" width="400" height="150">
		</div>
	</div>

  <div class="row">
		<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3 rev_index_head">
			<h3><%= @article.headline %></h3>
			<div><%= @article.date.to_s(:long) %></div>	
			<div><%= @article.author %></div>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2 rev_index_text">
			<div><%= @article.text %></div>
		</div>
	</div>
 
<% end %>

